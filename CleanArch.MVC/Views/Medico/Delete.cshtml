@model Clinica.Application.ViewModels.MedicoViewModel

@{
    ViewData["Title"] = "Apagar";
}

<h3>Excluir Médico</h3>

<h4>Deseja realmente excluir esse médico? </h4>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CRM)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CRM)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Especialidade)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Especialidade)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Excluir" class="btn btn-danger" />
        <button type="button" onclick="window.location.href='@Url.Action("Index")'" class="btn btn-primary">Voltar</button>
    </form>
    
</div>